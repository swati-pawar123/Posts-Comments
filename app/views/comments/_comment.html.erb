
<p>
  <%= comment.name %>: <%= comment.body %>
</p>

<p><%= time_ago_in_words(comment.created_at) %> ago</p>

<% if user_signed_in? %>
  <p>
    <%= link_to "Delete", [comment.post,comment],
                              method: :delete,
                              class: "button",
                              data: { confirm: "Are you sure?" },
                              class: "btn btn-outline-danger" %>
  </p>
<% end %>